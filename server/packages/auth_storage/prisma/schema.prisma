// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "dart run orm"
}

datasource db {
  provider = "sqlite"
  url      = "file:./auth.db"
}

model User {
  id             String  @id @default(cuid())
  name           String
  phone          String  @unique
  isOTPConfirmed Boolean @default(false)
}
